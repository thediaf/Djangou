{% extends 'base.html.twig' %}

{% block title 'Se connecter'%}
{% block body %}

        <div class="container mt-4">
            <h1>Connexion</h1>
            <form action="{{path('login')}}" method="post">
                {% if error %}
                    <div class="alert alert-danger">
                        {{error.messageKey | trans(error.messagedata, 'security')}}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="col s12 m6 l6 offset-m3 offset-l3">
                        Tu es actuellement connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnecte-toi</a>
                    </div>
                {% endif %}

                <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
                    <input type="text" name="_username" id="username" value="{{ last_username}}" class="" required autofocus placeholder="Nom d'utilisateur">
                </div>

                <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
                    <input type="password" name="_password" id="password" class="" required placeholder="Mot de passe">
                </div>

                {# <div class="form-group">
                    <button class="btn btn-dark" type="submit">Se connecter</button>
                </div> #}

                <div class="input-field col s12">
                    <input type="submit" class="btn btn-dark" value="Me connecter">
                </div>
            </form>
        </div>

{% endblock%}