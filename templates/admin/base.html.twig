<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Administration | {{ App.name }}{% endblock %}
        </title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
        <link rel="stylesheet" href="{{ asset('fontawesome/css/all.css') }}">
        
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="wrapper">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="{{ path('translation') }}">{{ App.name }}</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    
                    {% if app.user %}
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="">Historique</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="">Suggestion</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="">Historique</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('admin_index') }}">Administration</a>
                                </li>
                            {% endif %}
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('logout')}}">Se deconnecter</a>
                            </li>
                        </ul>
                    {% else %}
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('register') }}">S'inscrire</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('login')}}">Se connecter</a>
                            </li>
                        </ul>
                    {% endif %}
                    
                </div>

            </nav>

            <div class="main-warpper">
                <div class="row mx-0 px-0">
                    <div class="col-md-3 col-sm-4 pl-0">
                        {% block sidebar %}
                            {% include "admin/sidebar.html.twig" %}
                        {% endblock %}
                    </div>
                    <div class="col-md-9 col-sm-8 main pr-0">
                        {% block content %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
        <script src="{{ asset('js/jquery-1.11.2.min.js') }}"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script src="{{ asset('fontawesome/js/all.js') }}"></script>
        <script src="{{ asset('js/admin.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
